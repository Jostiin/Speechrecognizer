#:import stt Speechrecognizer.stt
<assistant>:
    GridLayout:
        rows:2
        BoxLayout:
            MDLabel:
                id: label01
                text:'No conectado'
                halign: 'center'
                color: (129/255,64/255,225/255)
        FloatLayout:
            MDFloatingActionButton:
                id: button01
                icon:'lan-disconnect'
                pos_hint:{"center_x":.5,"center_y":.5}
                md_bg_color: (129/255,64/255,225/255)

                on_press: root.start_listening()
